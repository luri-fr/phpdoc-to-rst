<phpunit bootstrap="vendor/autoload.php" stderr="true" colors="true">
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true" processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
            <exclude>
                <directory suffix=".php">./demos</directory>
                <directory suffix=".php">./tests</directory>
                <directory suffix=".php">./vendor</directory>
            </exclude>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="PHPDocToRst-V1">
            <file>./tests/DocGenerationTest.php</file>
        </testsuite>
		<testsuite name="PHPDocToRst-V2">
            <directory>./tests/</directory>
			<exclude>./tests/DocGenerationTest.php</exclude>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
</phpunit>
